<!-- nav.njk -->
<nav id="main-menu" class="right nav-menu">
  <div class="menu-section">
    {% for section in site.data.sections %}
      {% if section.active %}
      <a href="#{{section.id}}" class="section-link">
        <i class="fa {{section.menuIcon}}"></i>
        {{section.label}}
      </a>
      {% endif %}
    {% endfor %}
  </div>
</nav>
